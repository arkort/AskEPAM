<Window x:Class="AskEpamClientApplication.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignIn" Height="300" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Left" Margin="71,45,0,0" VerticalAlignment="Top"/>
        <TextBox  x:Name="TextBoxLogin"  HorizontalAlignment="Left" Height="23" Margin="124,43,0,0" TextWrapping="Wrap" Text="login" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="50,76,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="TextBoxPwd" HorizontalAlignment="Left" Height="23" Margin="124,78,0,0"     VerticalAlignment="Top" Width="120"/>
        <Button Content="Sign In" HorizontalAlignment="Left" Margin="60,134,0,0" VerticalAlignment="Top" Width="170" Height="33" Click="SignIn_Click"/>
        <Button Content="Sign Up" HorizontalAlignment="Left" Margin="60,182,0,0" VerticalAlignment="Top" Width="170" Height="33" Click="SignUp_Click"/>

    </Grid>
</Window>
