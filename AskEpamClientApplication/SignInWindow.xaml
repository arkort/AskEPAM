<Window x:Class="AskEpamClientApplication.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignInWindow" Height="300" Width="300">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Left" Margin="78,68,0,0" VerticalAlignment="Top"/>
        <TextBox  x:Name="TextBoxLogin"  HorizontalAlignment="Left" Height="23" Margin="131,66,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="57,99,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="TextBoxPwd" HorizontalAlignment="Left" Height="23" Margin="131,101,0,0"     VerticalAlignment="Top" Width="120"/>
        <Button Content="Sign In" HorizontalAlignment="Left" Margin="67,157,0,0" VerticalAlignment="Top" Width="170" Height="33" Click="Button_Click"/>

    </Grid>
</Window>
