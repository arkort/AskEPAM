<Window x:Class="AskEpamClientApplication.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignUpWindow" Height="300" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Left" Margin="81,44,0,0" VerticalAlignment="Top"/>
        <TextBox  Name="TextBoxLogin"  HorizontalAlignment="Left" Height="23" Margin="134,42,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="60,75,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="TextBoxPwd" HorizontalAlignment="Left" Height="23" Margin="134,77,0,0"     VerticalAlignment="Top" Width="120"/>
        <Label Content="Confirm password" HorizontalAlignment="Left" Margin="14,112,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="TextBoxConfirmPwd" HorizontalAlignment="Left" Height="23" Margin="134,112,0,0"     VerticalAlignment="Top" Width="120"/> 
        <Button Content="Sign Up" HorizontalAlignment="Left" Margin="60,162,0,0" VerticalAlignment="Top" Width="170" Height="33" Click="Button_Click"/>
    </Grid>
</Window>
